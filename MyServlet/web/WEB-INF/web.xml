<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AnimalController</servlet-name>
        <servlet-class>servlets.AnimalController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnimalController</servlet-name>
        <url-pattern>/animal</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DogServlet</servlet-name>
        <servlet-class>servlets.DogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DogServlet</servlet-name>
        <url-pattern>/dog</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AnimalView</servlet-name>
        <jsp-file>/jsp/AnimalView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnimalView</servlet-name>
        <url-pattern>/animals</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DogView</servlet-name>
        <jsp-file>/jsp/DogView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>DogView</servlet-name>
        <url-pattern>/dogs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CatView</servlet-name>
        <jsp-file>/jsp/CatView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatView</servlet-name>
        <url-pattern>/cats</url-pattern>
    </servlet-mapping>

</web-app>
